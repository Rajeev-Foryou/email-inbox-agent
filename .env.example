# ============================================
# Email Inbox Agent - Environment Variables
# ============================================

# -----------------
# Email Configuration (REQUIRED)
# -----------------
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your-email@gmail.com
IMAP_PASSWORD=your-app-password  # Use Gmail App Password (not regular password)

# -----------------
# AI Provider (REQUIRED if using Groq)
# -----------------
AGENT_PROVIDER=stub  # Options: 'groq' (production) or 'stub' (testing)
GROQ_API_KEY=your-groq-api-key-here  # Required if AGENT_PROVIDER=groq
GROQ_MODEL=llama-3.3-70b-versatile  # Optional: defaults to 'llama-3.3-70b-versatile'
GROQ_ENDPOINT=https://api.groq.com/openai/v1/chat/completions  # Optional: custom endpoint

# -----------------
# Database (REQUIRED)
# -----------------
DATABASE_URL=postgresql://user:password@localhost:5432/email_inbox_agent

# -----------------
# Server (OPTIONAL)
# -----------------
PORT=3000  # Optional: defaults to 3000
NODE_ENV=development  # Options: development | production | test

# -----------------
# Logging (OPTIONAL)
# -----------------
LOG_LEVEL=info  # Options: fatal | error | warn | info | debug | trace | silent

